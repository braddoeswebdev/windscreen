<%= form_for(@screen) do |f| %>
  <% if @screen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@screen.errors.count, "error") %> prohibited this screen from being saved:</h2>

      <ul>
      <% @screen.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :base %>
    <%= f.text_field :base %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes, :size => '20x4' %>
  </div>
  <% if current_user.manager? %>
    <div class="field">
     <%= f.label :approved %>
      <%= f.check_box :approved %>
    </div>
  <% end %>
  <% if current_user.manager? || current_user == @screen.user %>
  <div class="field">
    <%= f.label :enabled %>
    <%= f.check_box :enabled %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
