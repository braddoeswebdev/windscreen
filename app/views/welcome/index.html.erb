<% if current_user %>

<% else %>
  <div id="loginBox" class="span4 offset4">
    <h1>Log in to Windscreen</h1>
    <%= form_tag login_path do %>
      <p><%= text_field_tag :username, nil, :placeholder => 'Username' %></p>
      <p><%= password_field_tag :password, nil, :placeholder => 'Password' %></p>

      <%= submit_tag "Log In", :class => 'btn btn-large btn-success' %>

    <% end %>
  </div>
<% end %>
